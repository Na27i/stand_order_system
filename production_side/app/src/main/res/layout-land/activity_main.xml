<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/orderAll"
        android:layout_width="790dp"
        android:layout_height="550dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="@string/全体"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wait5"
        android:layout_width="720dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flame_style"
        app:layout_constraintEnd_toEndOf="@+id/orderAll"
        app:layout_constraintStart_toStartOf="@+id/orderAll"
        app:layout_constraintTop_toBottomOf="@+id/wait4" />

    <TextView
        android:id="@+id/wait4"
        android:layout_width="720dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flame_style"
        app:layout_constraintEnd_toEndOf="@+id/orderAll"
        app:layout_constraintStart_toStartOf="@+id/orderAll"
        app:layout_constraintTop_toBottomOf="@+id/wait3" />

    <TextView
        android:id="@+id/wait3"
        android:layout_width="720dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flame_style"
        app:layout_constraintEnd_toEndOf="@+id/orderAll"
        app:layout_constraintStart_toStartOf="@+id/orderAll"
        app:layout_constraintTop_toBottomOf="@+id/wait2" />

    <TextView
        android:id="@+id/wait2"
        android:layout_width="720dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flame_style"
        app:layout_constraintEnd_toEndOf="@+id/orderAll"
        app:layout_constraintStart_toStartOf="@+id/orderAll"
        app:layout_constraintTop_toBottomOf="@+id/wait1" />

    <TextView
        android:id="@+id/wait1"
        android:layout_width="720dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flame_style"
        app:layout_constraintEnd_toEndOf="@+id/orderAll"
        app:layout_constraintStart_toStartOf="@+id/orderAll"
        app:layout_constraintTop_toBottomOf="@+id/wait0" />

    <TextView
        android:id="@+id/wait0"
        android:layout_width="720dp"
        android:layout_height="60dp"
        android:background="@drawable/flame_style"
        app:layout_constraintEnd_toEndOf="@+id/orderAll"
        app:layout_constraintStart_toStartOf="@+id/orderAll"
        app:layout_constraintTop_toTopOf="@+id/planeSum" />

    <TextView
        android:id="@+id/orderKind"
        android:layout_width="280dp"
        android:layout_height="450dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="@string/種類"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nowWait"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/flame_style"
        android:gravity="center_vertical|end"
        android:text="@string/待ち"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/orderAll"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/honeySum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/はちみつ"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/orderKind"
        app:layout_constraintEnd_toEndOf="@+id/orderKind" />

    <TextView
        android:id="@+id/deathSum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/デスソース"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/honeySum"
        app:layout_constraintEnd_toEndOf="@+id/orderKind" />

    <TextView
        android:id="@+id/menSum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/明太"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/orderKind"
        app:layout_constraintStart_toStartOf="@+id/orderKind" />

    <TextView
        android:id="@+id/soySum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/しょうゆ"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menSum"
        app:layout_constraintStart_toStartOf="@+id/orderKind" />

    <TextView
        android:id="@+id/planeSum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/プレーン"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/soySum"
        app:layout_constraintStart_toStartOf="@+id/orderKind" />

    <TextView
        android:id="@+id/pizzaSum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/flame_style"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/ピザ"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/deathSum"
        app:layout_constraintEnd_toEndOf="@+id/orderKind" />

</androidx.constraintlayout.widget.ConstraintLayout>